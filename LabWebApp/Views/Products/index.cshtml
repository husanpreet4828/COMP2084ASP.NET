@model IEnumerable<LabWebApp.Models.Product>

@{
    ViewData["Title"] = "Product Index";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Description</td>
            <td>
                <a href="@Url.Action("Edit", "Product", new { id = item.Id })">Edit</a> |
                <a href="@Url.Action("Details", "Product", new { id = item.Id })">Details</a> |
                <a href="@Url.Action("Delete", "Product", new { id = item.Id })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Create New Product</a>
